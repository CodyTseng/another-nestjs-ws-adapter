{
  "name": "another-nestjs-ws-adapter",
  "version": "10.0.0",
  "description": "another nestjs ws adapter",
  "author": "codytseng",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodyTseng/another-nestjs-ws-adapter.git"
  },
  "scripts": {
    "build": "tsc -b -v",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint 'src/**/**.ts'",
    "lint:check": "eslint --max-warnings 0 'src/**/**.ts'",
    "format": "prettier \"src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "format:check": "prettier \"src/**/*.ts\" --ignore-path ./.prettierignore --check",
    "prepublish": "npm run lint:check && npm run format:check && npm run clean && npm run build && npm run test",
    "publish": "npm publish",
    "release": "npm run prepublish && npm run publish"
  },
  "devDependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/testing": "^10.3.3",
    "@nestjs/websockets": "^10.3.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/websockets": "^10.3.3",
    "rxjs": "^7.8.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}