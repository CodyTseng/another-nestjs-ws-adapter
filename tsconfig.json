{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "exclude": ["node_modules", "integration"]
}